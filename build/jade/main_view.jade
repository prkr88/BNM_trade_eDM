//- Set the order and spacing of the content modules
table(width="640", align="center", border="0", cellpadding="0", cellspacing="0")
	repeater
		tr
			td(valign="top", width="640").article
				include header.jade
		tr
			td(valign="top", width="640").article
				include line.jade
		tr
			td(valign="top", width="640").article
				include title.jade
		tr
			td(valign="top", width="640").article
				include hero.jade
		tr
			td(valign="top", width="640").article
				include two_cols.jade
		tr
			td(valign="top", width="640").article
				include three_cols.jade
		tr
			td(valign="top", width="640").article
				include content_box.jade
		tr
			td(valign="top", width="640").article
				include quote.jade
		tr
			td(valign="top", width="640").article
				include info.jade
		tr
			td.spacer
				span(style={'line-height':'30px'}) &nbsp;